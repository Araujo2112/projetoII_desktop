<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.frontendjavafx.controllers.rececionista.EditarReservaController"
            prefWidth="400" prefHeight="550">

    <center>
        <VBox spacing="15" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Editar Reserva" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <ComboBox fx:id="comboEspacoDesportivo" promptText="Escolher Espaço Desportivo" prefWidth="300"/>
            <DatePicker fx:id="txtData" promptText="Escolher Data" prefWidth="300"/>
            <TextField fx:id="txtHoraInicio" promptText="Hora Início (ex: 10:00)" />
            <TextField fx:id="txtHoraFim" promptText="Hora de Fim (ex: 12:00)" />

            <Button text="Guardar Alterações" onAction="#guardarAlteracoes" prefWidth="200"/>
        </VBox>
    </center>

</BorderPane>
